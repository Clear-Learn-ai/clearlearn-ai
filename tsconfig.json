{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "target": "es2015",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["./src/types/*", "./types/*"],
      "@/lib/*": ["./src/lib/*", "./lib/*"],
      "@/app/*": ["./src/app/*", "./app/*"],
      "@/components/*": ["./src/components/*", "./components/*"],
      "@/core/*": ["./src/core/*", "./core/*"],
      "@/generators/*": ["./src/generators/*", "./generators/*"],
      "@/adapters/*": ["./src/adapters/*", "./adapters/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.d.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "__tests__", "app/contact/page.tsx", "components/Footer.tsx", "components/HeroScene3D.tsx", "mcp-server/**", "agents/**", "generators/**"]
}